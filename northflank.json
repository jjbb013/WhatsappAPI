{
  "name": "WhatsApp API Server",
  "description": "A Dockerized WhatsApp API service for sending messages via REST API",
  "version": "1.0.0",
  "environment": {
    "NODE_ENV": "production",
    "PORT": "3000",
    "PUPPETEER_EXECUTABLE_PATH": "/usr/bin/chromium"
  },
  "ports": [
    {
      "port": 3000,
      "protocol": "http",
      "public": true
    }
  ],
  "addons": [
    {
      "name": "whatsapp-session",
      "type": "volume",
      "size": "100Mi",
      "mountPath": "/usr/src/app/.wwebjs_auth"
    },
    {
      "name": "whatsapp-uploads",
      "type": "volume", 
      "size": "1Gi",
      "mountPath": "/usr/src/app/uploads"
    }
  ],
  "resources": {
    "cpu": "0.5",
    "memory": "512Mi"
  },
  "healthCheck": {
    "path": "/",
    "interval": 30,
    "timeout": 10,
    "retries": 3
  },
  "build": {
    "context": ".",
    "dockerfile": "Dockerfile"
  },
  "deployment": {
    "strategy": "rolling",
    "minReplicas": 1,
    "maxReplicas": 3
  }
}